<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/apply_sign"
        android:visibility="gone"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/apply_sign"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp">
            <dhu.cst.yinqingbo416.sports.CustomControl.TextViewBorder
                android:id="@+id/activity_title_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                app:borderColor="@color/colorAccent"
                android:padding="2dp"
                android:text="HOT"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_test"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/text"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/activity_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray4"
                android:text="松江体育馆"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/activity_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray4"
                android:text=" | "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/activity_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray4"
                android:text="2月22日（周六） 13：00 - 16：00"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_award_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="5dp">
            <dhu.cst.yinqingbo416.sports.CustomControl.TextViewBorder
                android:id="@+id/activity_award_sign1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="免跑单"
                android:visibility="gone"
                android:textColor="@color/sign1"
                app:borderColor="@color/sign1"
                android:textSize="8sp"
                android:layout_marginRight="5sp"/>
            <dhu.cst.yinqingbo416.sports.CustomControl.TextViewBorder
                android:id="@+id/activity_award_sign2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="U盘"
                android:visibility="gone"
                android:textColor="@color/sign2"
                app:borderColor="@color/sign2"
                android:textSize="8sp"
                android:layout_marginRight="5sp"
                />
            <dhu.cst.yinqingbo416.sports.CustomControl.TextViewBorder
                android:id="@+id/activity_award_sign3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="游戏机"
                android:visibility="gone"
                android:textColor="@color/sign3"
                app:borderColor="@color/sign3"
                android:textSize="8sp"
                android:layout_marginRight="5sp"/>
            <dhu.cst.yinqingbo416.sports.CustomControl.TextViewBorder
                android:id="@+id/activity_award_sign4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="企鹅公仔"
                android:visibility="gone"
                android:textColor="@color/sign4"
                app:borderColor="@color/sign4"
                android:textSize="8sp"
                android:layout_marginRight="5sp"/>
            <dhu.cst.yinqingbo416.sports.CustomControl.TextViewBorder
                android:id="@+id/activity_award_sign5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="鼠标"
                android:visibility="gone"
                android:textColor="@color/sign5"
                app:borderColor="@color/sign5"
                android:textSize="8sp"
                android:layout_marginRight="5sp"/>
            <dhu.cst.yinqingbo416.sports.CustomControl.TextViewBorder
                android:id="@+id/activity_award_sign6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="键盘"
                android:visibility="gone"
                android:textColor="@color/sign6"
                app:borderColor="@color/sign6"
                android:textSize="8sp"
                android:layout_marginRight="5sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/activity_people_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray4"
                android:text="名额:"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/activity_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray4"
                android:text="男：8/8 女：5/5"
                android:paddingBottom="8dp"
                android:textSize="12sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0"/>
    </LinearLayout>

</RelativeLayout>