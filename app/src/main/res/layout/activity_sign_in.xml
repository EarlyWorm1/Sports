<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".SignInActivity">
    <RelativeLayout
        android:id="@+id/sign_in_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:padding="5dp">
        <ImageView
            android:id="@+id/sign_in_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/sign_in_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_in_title"
        android:gravity="center"
        android:text="用户注册"
        android:textSize="24sp"
        android:textColor="#ffffff"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sign_in_input"
        android:layout_below="@+id/sign_in_name"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:fadeScrollbars="false"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@drawable/scrollbar"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <include
                android:id="@+id/sign_in_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/sign_in_input_layout"/>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scrollView"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/btn_sign_in"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/button_bg"
                android:text="注册"
                android:textSize="20sp"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>